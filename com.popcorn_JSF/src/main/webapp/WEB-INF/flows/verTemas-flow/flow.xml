<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:faces="http://www.springframework.org/schema/faces"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
         parent="parent-flow">

    <view-state id="verTemas" view="verTema.xhtml">
        
        <transition on="irATema" to="irTema">    
            <evaluate expression="temaController.getTema()" result="flowScope.tema"/>
        </transition>
        
        <transition on="irLoginUsuario" >     
            <evaluate expression="usuarioController.validarUsuario(flowRequestContext)" />    
        </transition>
        
                
    </view-state>
    
    <view-state id="irTema" view="comentarTema.xhtml">
        
        <on-render>
            <evaluate expression="comentarioController.fijarComentarios(tema)" />
            <evaluate expression="temaController.fijarNumComentarios(tema)"/>
        </on-render>        
        
        <transition on="irACrearComentario" >
            <evaluate expression="comentarioController.crearComenta(tema)" />
        </transition>       
             
        <transition on="irABorrarComentario" to="borrarComentario">    
            <evaluate expression="comentarioController.getComentario()" result="flowScope.coment" />
        </transition>
        <transition on="borrarComentario" >
            <evaluate expression="votoController.borrarComenta()" />
        </transition>
            
        <transition on="irAEditarComentario"  >
            <evaluate expression="comentarioController.getComentario()" result="flowScope.coment"/>            
        </transition>
          
        <transition on="editarComen" >
            <evaluate expression="comentarioController.editarComenta(coment,tema)" />
        </transition>    
  
    </view-state>  
  
</flow>
